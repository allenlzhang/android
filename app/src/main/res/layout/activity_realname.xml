<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >

    <include layout="@layout/head_back" />

    <LinearLayout
        android:id="@+id/realname_lay_authertodo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/realname_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="9dip"
            android:text="为了保证远程操作的安全性，请先进行安全认证"
            android:textColor="@color/text_color_gray3"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/realname_lay_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <com.carlt.yema.ui.view.ValidateEditText
                android:id="@+id/realname_edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/realname_lay_IDCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <com.carlt.yema.ui.view.ValidateEditText
                android:id="@+id/realname_edt_IDCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/realname_txt_option"
            style="@style/public_bottom_btn_blue"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="@dimen/usercenter_margin"
            android:layout_marginRight="@dimen/usercenter_margin"
            android:layout_marginTop="10dip"
            android:text="提交" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/realname_lay_authered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="67.5dip"
            android:layout_height="67.5dip"
            android:layout_marginTop="70dip"
            android:src="@mipmap/safe_authored" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dip"
            android:gravity="center"
            android:text="已认证"
            android:textColor="@color/text_color_gray3"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/realname_txt_userinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dip"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_color_gray3"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>