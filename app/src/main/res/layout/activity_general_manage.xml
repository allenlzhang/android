<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    tools:context=".ui.activity.setting.AccountSecurityActivity">


    <LinearLayout
        style="@style/setting_page_item_style"
        android:background="@color/setting_item_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/remote_voice_affect_txt"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <CheckBox
            android:id="@+id/btn_remote_voice_affect"
            style="@style/manage_message_checkbox"
            android:layout_centerVertical="true" />
    </LinearLayout>


</LinearLayout>
