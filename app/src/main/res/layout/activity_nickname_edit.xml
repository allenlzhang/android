<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    tools:context="com.carlt.yema.ui.activity.setting.NicknameEditActivity">
    <EditText
        android:id="@+id/nickname_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/text_color_gray1"
        android:paddingLeft="12dp"
        android:maxLength="16"
        android:textSize="14sp"
        android:background="@drawable/login_input_bg"
        android:hint="@string/nickname_edit_default_txt"
        />
    <TextView
        android:id="@+id/nickname_input_commit"
        style="@style/public_bottom_btn"
        android:layout_height="44dp"
        android:text="@string/edit_commit"
        android:layout_marginTop="49dip"
        android:layout_marginLeft="12dip"
        android:textColor="@color/black"
        android:layout_marginRight="12dip"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
