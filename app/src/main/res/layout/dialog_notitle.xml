<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_air_condition_bg"
    android:orientation="vertical" >

    <!-- 内容部分 -->

    <RelativeLayout
        android:id="@+id/dialog_notitle_lay_content"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_marginTop="15dip" >

        <TextView
            android:id="@+id/dialog_notitle_text_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:text="内容1"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_notitle_text_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_notitle_text_content1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:gravity="center_horizontal"
            android:text="内容2"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/dialog_notitle_lay_line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#d6d6d6" />

    <RelativeLayout
        android:id="@+id/dialog_notitle_lay_bottom"
        android:layout_width="fill_parent"
        android:layout_height="43dip"
        android:visibility="visible" >

        <View
            android:id="@+id/line_v"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="#d6d6d6" />

        <TextView
            android:id="@+id/dialog_notitle_text_btnleft"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/line_v"
            android:gravity="center"
            android:text="左侧按钮"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_notitle_text_btnright"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/line_v"
            android:gravity="center"
            android:text="右侧按钮"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

     <TextView
            android:id="@+id/dialog_notitle_text_btnone"
            android:layout_width="fill_parent"
            android:layout_height="43dip"
            android:gravity="center"
            android:text="只有一个按钮"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
</LinearLayout>