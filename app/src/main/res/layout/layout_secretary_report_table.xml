<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="124dip"
    android:layout_marginBottom="10dip"
    android:layout_marginLeft="12dip"
    android:layout_marginRight="12dip"
    android:layout_marginTop="10dip"
    android:background="@drawable/secretary_table_bg"
    android:padding="1dip" >

    <TextView
        android:id="@+id/text_title2"
        style="@style/secretary_report_txt1"
        android:layout_centerHorizontal="true"
        android:text="油耗" />

    <TextView
        android:id="@+id/text_title1"
        style="@style/secretary_report_txt3"
        android:layout_toLeftOf="@id/text_title2"
        android:text="里程" />

    <TextView
        android:id="@+id/text_title3"
        style="@style/secretary_report_txt3"
        android:layout_toRightOf="@id/text_title2"
        android:text="最高速度" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/text_title2"
        android:background="@color/text_color_gray3" />

    <TextView
        android:id="@+id/layout_secretary_report_table_txt2"
        style="@style/secretary_report_txt2"
        android:layout_below="@id/text_title1"
        android:layout_centerHorizontal="true"
        android:text="升" />

    <TextView
        android:id="@+id/layout_secretary_report_table_txt1"
        style="@style/secretary_report_txt4"
        android:layout_below="@id/text_title1"
        android:layout_toLeftOf="@id/layout_secretary_report_table_txt2"
        android:text="公里" />

    <TextView
        android:id="@+id/layout_secretary_report_table_txt3"
        style="@style/secretary_report_txt4"
        android:layout_below="@id/line1"
        android:layout_toRightOf="@id/layout_secretary_report_table_txt2"
        android:text="得分" />

    <TextView
        android:id="@+id/line2"
        style="@style/line_h"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/layout_secretary_report_table_txt1"
        android:background="@color/text_color_gray3" />

    <TextView
        android:id="@+id/text_title5"
        style="@style/secretary_report_txt1"
        android:layout_below="@id/line2"
        android:layout_centerHorizontal="true"
        android:text="行车时间" />

    <TextView
        android:id="@+id/text_title4"
        style="@style/secretary_report_txt3"
        android:layout_below="@id/line2"
        android:layout_toLeftOf="@id/text_title5"
        android:text="平均油耗" />

    <TextView
        android:id="@+id/text_title6"
        style="@style/secretary_report_txt3"
        android:layout_below="@id/line2"
        android:layout_toRightOf="@id/text_title5"
        android:text="" />

    <TextView
        android:id="@+id/line3"
        style="@style/line_h"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/text_title4"
        android:background="@color/text_color_gray3" />

    <TextView
        android:id="@+id/layout_secretary_report_table_txt5"
        style="@style/secretary_report_txt2"
        android:layout_below="@id/line3"
        android:layout_centerHorizontal="true"
        android:text="分钟" />

    <TextView
        android:id="@+id/layout_secretary_report_table_txt4"
        style="@style/secretary_report_txt4"
        android:layout_below="@id/line3"
        android:layout_toLeftOf="@id/layout_secretary_report_table_txt5"
        android:text="" />

    <TextView
        android:id="@+id/layout_secretary_report_table_txt6"
        style="@style/secretary_report_txt4"
        android:layout_below="@id/line3"
        android:layout_toRightOf="@id/layout_secretary_report_table_txt5"
        android:text="" />

    <TextView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_alignRight="@id/text_title1"
        android:background="@color/text_color_gray3" />

    <TextView
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_alignRight="@id/text_title2"
        android:background="@color/text_color_gray3" />

</RelativeLayout>