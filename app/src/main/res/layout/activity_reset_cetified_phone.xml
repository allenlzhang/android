<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    tools:context="com.carlt.yema.ui.activity.setting.ResetCetifiedPhoneActivity"
    >
    <include
        layout="@layout/layout_title"/>
    <EditText
        android:id="@+id/reset_phone_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/text_color_gray1"
        android:paddingLeft="12dp"
        android:textSize="14sp"
        android:background="@drawable/login_input_bg"
        android:hint="@string/certified_code_reset_txt"
        android:inputType="number"
        android:maxLength="11" />

    <TextView
        android:id="@+id/reset_phone_commit"
        style="@style/public_bottom_btn"
        android:layout_height="44dp"
        android:text="@string/ok"
        android:layout_marginTop="49dip"
        android:layout_marginLeft="12dip"
        android:textColor="@color/black"
        android:layout_marginRight="12dip"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
