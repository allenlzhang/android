<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@color/layout_background"
    android:orientation="vertical"
    android:padding="4dip" >

    <!-- 标题部分 -->

    <TextView
        android:id="@+id/dialog_withtitle_title"
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:gravity="bottom"
        android:paddingLeft="18dip"
        android:text="提示"
        android:textColor="#45bbe6"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dialog_withtitle_title_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4d4d4d" />
    <!-- 内容部分 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="76dip"
        android:orientation="vertical"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >

        <TextView
            android:id="@+id/dialog_withtitle_content1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="10086"
            android:textColor="#505050"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_withtitle_content2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="test test"
            android:textColor="#AAAAAA"
            android:textSize="13sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="49dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="top"
            android:background="#4d4d4d" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="0.5dip"
            android:background="#4d4d4d"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_withtitle_btn1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="确认"
                android:textColor="#505050"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dialog_withtitle_btn2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="取消"
                android:textColor="#505050"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
    <!-- 按钮部分 -->

</LinearLayout>