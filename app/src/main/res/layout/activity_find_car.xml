<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.amap.api.maps.MapView
        android:id="@+id/findcar_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/findCar_img_persion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_loaction_car" />

    <TextView
        android:id="@+id/findCar_img_persion_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findCar_img_persion"
        android:layout_centerHorizontal="true"
        android:background="#404040"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="爱车位置" />

    <RelativeLayout
        android:id="@+id/findcar_lay_input"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/position_input_bg"
        android:paddingLeft="14dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/findcar_img_p"
            android:layout_width="16dp"
            android:layout_height="22.5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_loaction_car_small" />

        <ImageView
            android:id="@+id/findcar_img_cha"
            android:layout_width="33.5dp"
            android:layout_height="33.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/icon_cross" />

        <TextView
            android:id="@+id/findcar_txt_carpos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/findcar_img_cha"
            android:layout_toRightOf="@id/findcar_img_p"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textColorHint="#999999"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>