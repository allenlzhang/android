<?xml version="1.0" encoding="utf-8"?><!-- 姜黄色背景的副标题 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <ImageView
        android:id="@+id/layout_sub_head_img"
        android:layout_width="46dip"
        android:layout_height="46dip"
        android:layout_centerInParent="true"
        android:contentDescription="信息中心图标"
        android:src="@drawable/icon_secretary" />

    <TextView
        android:id="@+id/layout_sub_head_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dip"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dip"
        android:background="@drawable/information_centre_txt_bg"
        android:gravity="center_vertical"
        android:minLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>