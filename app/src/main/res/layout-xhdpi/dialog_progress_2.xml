<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="154dp"
    android:layout_height="154dp"
    android:background="@drawable/dialog_waiting_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="4dip"
    android:paddingRight="4dip" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:background="@mipmap/progress_dialog_outer" >

        <ImageView
            android:id="@+id/progress_img_animate"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/progress_dialog_inner"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <TextView
        android:id="@+id/progress_txt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="正在获取数据..."
        android:textColor="#30a4d7"
        android:textSize="12sp" />

</LinearLayout>