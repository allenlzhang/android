<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_download_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#80000000"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="4dip" >

        <!-- 标题部分 -->

        <TextView
            android:id="@+id/dialog_download_title"
            android:layout_width="fill_parent"
            android:layout_height="32dip"
            android:gravity="bottom"
            android:paddingLeft="18dip"
            android:text="提示"
            android:textColor="#45bbe6"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_download_title_div"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_divider" />

        <!-- 内容部分 -->

        <LinearLayout
            android:id="@+id/dialog_download_lay"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+id/dialog_download_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="野马"
                android:textColor="#505050"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/dialog_download_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_license_info_txt1"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:indeterminateOnly="false"
                android:max="100"
                android:maxHeight="5.5dip"
                android:minHeight="5.5dip"
                android:progressDrawable="@drawable/career_progress_bg" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="top"
            android:background="@drawable/dialog_div_h" />

        <!-- 按钮部分 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_download_btn1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="暂停"
                android:textColor="#505050"
                android:textSize="16sp" />

            <View
                android:id="@+id/dialog_download_div"
                style="@style/line_v"
                android:layout_width="0.5dip"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/dialog_download_btn2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/dialog_button_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#505050"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>