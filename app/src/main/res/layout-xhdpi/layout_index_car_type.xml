<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_index_car_type_layout1"
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
    </LinearLayout>

    <ListView
        android:id="@+id/layout_index_car_type_list"
        android:layout_toLeftOf="@+id/layout_index_car_type_layout1"
        style="@style/public_listView"
        android:divider="#d2d2d2"
        android:dividerHeight="1dip"/>

    <TextView
        android:id="@+id/layout_index_car_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="40sp" 
        android:visibility="invisible"/>

</RelativeLayout>