<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--父Activity无标题栏-->
    <style name="YemaAppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="text_common">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 公用标签式text -->
    <style name="public_label_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dip</item>
        <item name="android:background">@drawable/lable_txt_bg</item>
        <item name="android:textColor">@color/text_color_gray2</item>
        <item name="android:textSize">@dimen/text_size_small_s1</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 生涯-我的驾驶证 -->
    <style name="license_info_txt2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_gray3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 我的车秘书-行车信息item -->
    <style name="secretary_report_txt1">
        <item name="android:layout_width">93dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:textColor">@color/text_color_gray1</item>
        <item name="android:textSize">@dimen/text_size_small_s1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="secretary_report_txt2">
        <item name="android:layout_width">93dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:textColor">@color/text_color_gray2</item>
        <item name="android:textSize">@dimen/text_size_small_s1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="secretary_report_txt3">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:textColor">@color/text_color_gray1</item>
        <item name="android:textSize">@dimen/text_size_small_s1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="secretary_report_txt4">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:textColor">@color/text_color_gray2</item>
        <item name="android:textSize">@dimen/text_size_small_s1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 行车报告 -->
    <!-- 最大号txt -->
    <style name="report_txt_huge_l1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_green</item>
        <item name="android:textSize">80sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 大号txt -->
    <style name="report_txt_huge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_green</item>
        <item name="android:textSize">60sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 行车报告 -->
    <style name="report_txt_relative">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/report_month_paddingL</item>
        <item name="android:paddingRight">@dimen/report_month_paddingR</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>

    <style name="report_seekbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12dip</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>
        <item name="android:thumb">@mipmap/icon_pk</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:max">100</item>
        <item name="android:progress">0</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- PK枚红色背景txt -->
    <style name="report_txt_bg_rose_red">
        <item name="android:layout_width">16dip</item>
        <item name="android:layout_height">12.5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/red_light</item>
    </style>

    <!-- PK蓝色背景txt -->
    <style name="report_txt_bg_blue">
        <item name="android:layout_width">16dip</item>
        <item name="android:layout_height">12.5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue_light</item>
    </style>

    <style name="report_txt_middle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_gray2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <!--yema created by marller-->
    <style name="setting_page_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--setting界面item分割线-->
    <style name="setting_page_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/setting_item_divider_bg</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:layout_marginRight">12dip</item>
    </style>
    <!--setting子界面item内容style-->
    <style name="setting_subpage_item_content">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <!--车辆管理底部弹出style-->
    <style name="BottomDialog" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/title_bar_right_btn_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
</resources>