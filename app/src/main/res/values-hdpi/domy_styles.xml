<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- report day style -->
    <style name="day_tag_style">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/text_size_small_s3</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@mipmap/tab_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="day_driveInfo_title">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_size_small_s2</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="day_driveInfo_content">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_size_small_s3</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="listItem_day_hurry_txt">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/text_size_small_s2</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="listItem_day_info_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_size_small_s2</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="listItem_day_info_txt">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/text_size_small_s2</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>